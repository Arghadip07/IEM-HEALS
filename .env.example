# Database Configuration
DATABASE_URL=postgresql://healthguard:password@localhost:5432/healthguard
PGHOST=localhost
PGPORT=5432
PGDATABASE=healthguard
PGUSER=healthguard
PGPASSWORD=password

# Application Configuration
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# Session Management
SESSION_SECRET=your-session-secret-here-use-a-long-random-string

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@healthguard.app

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_FROM_NUMBER=+1234567890

# AI Service (Google Gemini)
GEMINI_API_KEY=your-gemini-api-key-here

# Google Services
GOOGLE_CLIENT_ID=your-google-oauth-client-id-here
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/googlefit/callback
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# Development Settings
# Set to 'true' to disable actual email/SMS sending in development
DEV_MODE_DISABLE_EMAILS=false
DEV_MODE_DISABLE_SMS=false

# Security Headers
CORS_ORIGIN=http://localhost:5000

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760

# Emergency Settings
EMERGENCY_RESPONSE_TIMEOUT=30000
HOSPITAL_SEARCH_RADIUS=25000

# AI Analysis Settings
AI_ANALYSIS_TIMEOUT=30000
AI_FALLBACK_ENABLED=true

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_WEB_BLUETOOTH=true
FEATURE_GOOGLE_FIT=true
FEATURE_AI_ANALYSIS=true
FEATURE_EMERGENCY_ALERTS=true
FEATURE_PHONE_VERIFICATION=true

# Legal and Compliance
PRIVACY_POLICY_URL=https://healthguard.app/privacy
TERMS_OF_SERVICE_URL=https://healthguard.app/terms
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=true

# Deployment
BUILD_VERSION=1.0.0
DEPLOY_ENVIRONMENT=development
MAINTENANCE_MODE=false

# External Services Health Check URLs
EXTERNAL_SERVICE_TIMEOUT=5000
